@model SakilaWebCRUD.ViewModels.LanguageViewModel

<div class="modal-header">
    <h5 class="modal-title">@((Model.LanguageId == 0) ? "Agregar Idioma" : "Editar Idioma")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
</div>

<form id="formLanguage" method="post"
      asp-action="@(Model.LanguageId == 0 ? "Create" : "Edit")"
      asp-controller="Language">
    <div class="modal-body">
        <input type="hidden" asp-for="LanguageId" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
