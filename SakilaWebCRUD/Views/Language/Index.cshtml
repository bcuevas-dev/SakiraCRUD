@{
    ViewData["Title"] = "Idiomas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Mantenimiento de Idiomas</h2>

<button class="btn btn-primary mb-3" id="btnAgregar">
    <i class="bi bi-plus-circle"></i> Agregar Idioma
</button>

<table id="tablaLanguage" class="table table-bordered table-striped">
    <thead class="table-light text-center">
        <tr>
            <th>Nombre</th>
            <th>Última Actualización</th>
            <th style="width: 130px;">Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalLanguage" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="modalContent">
            <!-- Contenido del formulario dinámico se carga aquí -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/language.js"></script>
}
