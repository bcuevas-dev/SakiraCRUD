@{
    ViewData["Title"] = "Direcciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Mantenimiento de Direcciones</h2>

<button class="btn btn-primary mb-3" id="btnAgregar">
    <i class="bi bi-plus-circle"></i> Agregar Dirección
</button>

<table id="tablaAddress" class="table table-bordered table-striped">
    <thead class="table-light text-center">
        <tr>
            <th>Dirección 1</th>
            <th>Dirección 2</th>
            <th>Distrito</th>
            <th>Código Postal</th>
            <th>Teléfono</th>
            <th>Ciudad</th>
            <th>Última Actualización</th>
            <th style="width: 130px;">Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalAddress" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent">
            <!-- Contenido dinámico -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/address.js"></script>
}
