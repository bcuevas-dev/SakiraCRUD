@{
    ViewData["Title"] = "Países";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Mantenimiento de Países</h2>

<button class="btn btn-primary mb-3" id="btnAgregar">Agregar País</button>

<table id="tablaPaises" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre del País</th>
            <th>Última Actualización</th>
            <th style="width: 130px;">Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal para Create/Edit -->
<div class="modal fade" id="modalPais" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="modalContent">
            <!-- Contenido cargado dinámicamente por AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/country.js"></script>
}
