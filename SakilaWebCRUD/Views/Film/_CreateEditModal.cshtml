@model SakilaWebCRUD.Models.ViewModels.FilmViewModel

<div class="modal-header">
    <h5 class="modal-title">
        @(Model.FilmId == 0 ? "Agregar Película" : "Editar Película")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
</div>

<form id="formPelicula" method="post"
      asp-action="@(Model.FilmId == 0 ? "Create" : "Edit")"
      asp-controller="Film">
    <input type="hidden" asp-for="FilmId" />

    <div class="modal-body row g-3">
        <div class="col-md-8">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ReleaseYear" class="form-label"></label>
            <input asp-for="ReleaseYear" class="form-control" />
        </div>

        <div class="col-md-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="2" class="form-control"></textarea>
        </div>

        <div class="col-md-6">
            <label asp-for="LanguageId" class="form-label"></label>
            <select asp-for="LanguageId" asp-items="Model.Idiomas" class="form-select"></select>
            <span asp-validation-for="LanguageId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="OriginalLanguageId" class="form-label"></label>
            <select asp-for="OriginalLanguageId" asp-items="Model.IdiomasOriginales" class="form-select"></select>
        </div>

        <div class="col-md-4">
            <label asp-for="RentalDuration" class="form-label"></label>
            <input asp-for="RentalDuration" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="RentalRate" class="form-label"></label>
            <input asp-for="RentalRate" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="Length" class="form-label"></label>
            <input asp-for="Length" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="ReplacementCost" class="form-label"></label>
            <input asp-for="ReplacementCost" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Rating" class="form-label"></label>
            <input asp-for="Rating" class="form-control" />
        </div>

        <div class="col-md-12">
            <label for="ActoresSeleccionados" class="form-label">Actores</label>
            <select asp-for="ActoresSeleccionados" asp-items="Model.ActoresDisponibles"
                    multiple class="form-select"></select>
        </div>

        <div class="col-md-12">
            <label for="CategoriasSeleccionadas" class="form-label">Categorías</label>
            <select asp-for="CategoriasSeleccionadas" asp-items="Model.CategoriasDisponibles"
                    multiple class="form-select"></select>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
