@{
    ViewData["Title"] = "Películas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Mantenimiento de Películas</h2>

<button class="btn btn-primary mb-3" id="btnAgregar">Agregar Película</button>

<table id="tablaPeliculas" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Año</th>
            <th>Clasificación</th>
            <th>Idioma</th>
            <th>Última Actualización</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal para Create/Edit -->
<div class="modal fade" id="modalPelicula" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent">
            <!-- Se carga vía AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/film.js"></script>
}
